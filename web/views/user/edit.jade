extends ../layout_clean

block content
	.container(style="width:85%; max-width: 450px")
		h1(class="title is-1") Edit your profile
		br
		if messages.erro
			.notification.is-danger
				strong #{messages.erro}
			br
		form(method="POST", action="/edit/#{dados._id}", role="form")
			.field
				label.label Name
				.control
					if dados
						input.input(type='text',name="name", placeholder='John Smith', value="#{dados.name}", required)
					else
						input.input(type='text',name="name", placeholder='John Smith', value="", autofocus, required)

			.field
				label.label Email
				.control.has-icons-left.has-icons-right

					input.input(type='email', name="email", placeholder='hello@host',value="#{dados.email}",disabled, required)
					span.icon.is-small.is-left
						i.fas.fa-envelope
					span.icon.is-small.is-right
						i.fas.fa-exclamation-triangle

			.field.is-grouped
				.control
					button.button.is-primary(type="submit") Salvar

